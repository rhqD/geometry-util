{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2019"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modues"]
}